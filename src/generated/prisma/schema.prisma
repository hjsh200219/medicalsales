generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user_info {
  id         String    @id @default(dbgenerated("(uuid_generate_v4())::text"))
  email      String    @unique
  name       String?
  image      String?
  company    String?
  address    String?
  last_login DateTime? @default(now()) @db.Timestamp(6)
  created_at DateTime? @default(now()) @db.Timestamp(6)
  updated_at DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  @@map("user_info")
}

model customer_info {
  id              String    @id @default(dbgenerated("(uuid_generate_v4())::text"))
  customer_name   String
  email           String?
  phone           String?
  mobile          String?
  address         String?
  lat             Float?
  lng             Float?
  comment         String?
  company         String?
  position        String?
  tier            String?
  created_at      DateTime? @default(now()) @db.Timestamp(6)
  modified_at     DateTime? @default(now()) @db.Timestamp(6)
  address_company String?
  lat_company     Float?
  lng_company     Float?
  created_by      String?

  @@map("customer_info")
}

model institutions {
  id         Int       @id @default(autoincrement())
  name       String
  open_date  String?
  phone      String?
  address    String?
  type       String?
  lat        Decimal?  @db.Decimal
  lng        Decimal?  @db.Decimal
  created_at DateTime? @default(now()) @db.Timestamp(6)
}
